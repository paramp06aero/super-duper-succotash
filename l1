#include <stdio.h>

int main(void){
    
    double score1 = 0;
    double score2 = 0;
    double score3 = 0;
    double score4 = 0;
    double score5 = 0;
    printf("Enter the scores for the 5 subjects separated by space:");
    scanf("%lf %lf %lf %lf %lf", &score1, &score2, &score3, &score4, &score5); // input of the grades
    
    double totalscore = 0;
    totalscore = score1+score2+score3+score4+score5;
    printf("Total score: %f\n", totalscore); // displaying the total score
    
    double avgscore = 0;
    avgscore = totalscore / 5;
    printf("Percentage: %f%%\n", avgscore); // calculating the average/percentage
    
    return 0;
    
}
